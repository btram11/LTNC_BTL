                            <TextBlock FontWeight="Thin" Grid.Column="0" Text="Overdue" FontSize="13" Foreground="#dfe1e3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20"/>
                            <TextBlock FontWeight="Thin" Grid.Column="1" Text="of Total Scheduled" FontSize="13" Foreground="#dfe1e3" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 20"/>
                        </Grid>
                    </Grid>
                </Border>-->

            <Border Grid.Row="4"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Style="{StaticResource CardDashboard}"
                    Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="auto" />
                        <RowDefinition  Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="Bold"
                               Grid.Row="0"
                               Grid.Column="0"
                               Text="Vehicle Assignments"
                               FontSize="13"
                               Foreground="#dfe1e3"
                               Margin="0 0 0 15" />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock FontWeight="Thin"
                                   Grid.Column="0"
                                   Text="Assigned"
                                   FontSize="13"
                                   Foreground="#dfe1e3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Margin="0 20" />
                        <TextBlock FontWeight="Thin"
                                   Grid.Column="1"
                                   Text="Unassigned"
                                   FontSize="13"
                                   Foreground="#dfe1e3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Margin="0 20" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
