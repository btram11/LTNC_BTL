                                    <TextBlock Text="96" FontSize="13" HorizontalAlignment="Center"  Foreground="#dfe1e3" Margin="10 10"/>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                        <materialDesign:Card UniformCornerRadius="10" Background="#1e2e44" Margin="10 5">
                            <StackPanel>
                                <Grid>
                                    <TextBlock FontWeight="Bold" Text="Wheel and Tires" FontSize="15" Foreground="#dfe1e3" Margin="10 15"/>
