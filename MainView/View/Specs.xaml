                        </materialDesign:Card>
                        <materialDesign:Card UniformCornerRadius="10" Background="#1e2e44" Margin="10 5">
                            <StackPanel>
                                <Grid>
                                    <TextBlock FontWeight="Bold" Text="Weight" FontSize="15" Foreground="#dfe1e3" Margin="10 15"/>
                                    <Button  Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 15" Style="{StaticResource menubutton}">
                                        <TextBlock  Text="Edit" Style="{StaticResource menuButtonText}"/>
                                    </Button>
                                </Grid>
                                <Grid>
