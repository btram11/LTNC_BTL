                            Style="{StaticResource CardDashboard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Fuel Price"
                                       FontSize="20"
                                       Style="{StaticResource CardDashboardTitle}" />
                            <ScrollViewer Grid.Row="1"
                                          Style="{StaticResource ScrollViewMenu}"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock  Grid.Row="0"
                                                Grid.Column="0"
                                                Text="Fuel Type"
                                                HorizontalAlignment="Left"
                                                FontWeight="Bold"
                                                FontSize="17"
                                                Margin="0 8 0 8"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="0"
                                                Grid.Column="2"
                                                Margin="0 8 0 8"
                                                TextAlignment="Center"
                                                HorizontalAlignment="Center"
                                                FontSize="17"
                                                FontWeight="Bold"
                                                Style="{StaticResource CardDashboardNormalText}">
                            Price <LineBreak />
                            (VNĐ/Liter)
                                    </TextBlock>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="5"
                                               Margin="0 8 0 8"
                                               TextAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="17"
                                               FontWeight="Bold"
                                               Style="{StaticResource CardDashboardNormalText}">
                            Price differential <LineBreak />
                            (VNĐ/Liter)
                                    </TextBlock>


                                    <TextBlock  Grid.Row="1"
                                                Grid.Column="0"
                                                Text="{Binding nameGasPrice[0], UpdateSourceTrigger=PropertyChanged,FallbackValue='Type 1', TargetNullValue= 'Type 1'}"
                                                HorizontalAlignment="Left"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="1"
                                                Grid.Column="2"
                                                Text="{Binding nameGasPrice[1], UpdateSourceTrigger=PropertyChanged, FallbackValue='00.000', TargetNullValue='00.000'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="1"
                                                Grid.Column="4"
                                                Text="{Binding nameGasPrice[2], UpdateSourceTrigger=PropertyChanged, FallbackValue='0', TargetNullValue='0'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Margin="0 4 0 4"
                                                Foreground="{Binding Text, Mode=OneWay, RelativeSource={RelativeSource Self}, Converter={StaticResource PriceDifferentialToColorConverter}, FallbackValue={StaticResource ForegroundPearlBushBrush}, TargetNullValue={StaticResource ForegroundPearlBushBrush}}"
                                                Style="{StaticResource CardDashboardTriggerText}" />

                                    <TextBlock  Grid.Row="2"
                                                Grid.Column="0"
                                                Text="{Binding nameGasPrice[3], UpdateSourceTrigger=PropertyChanged,FallbackValue='Type 2', TargetNullValue= 'Type 2'}"
                                                HorizontalAlignment="Left"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="2"
                                                Grid.Column="2"
                                                Text="{Binding nameGasPrice[4], UpdateSourceTrigger=PropertyChanged, FallbackValue='00.000', TargetNullValue='00.000'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="2"
                                                Grid.Column="4"
                                                Text="{Binding nameGasPrice[5], UpdateSourceTrigger=PropertyChanged, FallbackValue='0', TargetNullValue='0'}"
                                                HorizontalAlignment="Right"
                                                Foreground="{Binding Text, Mode=OneWay, RelativeSource={RelativeSource Self}, Converter={StaticResource PriceDifferentialToColorConverter}, FallbackValue={StaticResource ForegroundPearlBushBrush}, TargetNullValue={StaticResource ForegroundPearlBushBrush}}"
                                                FontSize="17"
                                                Margin="0 4 0 4"
                                                Style="{StaticResource CardDashboardTriggerText}" />


                                    <TextBlock  Grid.Row="3"
                                                Grid.Column="0"
                                                Text="{Binding nameGasPrice[6], UpdateSourceTrigger=PropertyChanged,FallbackValue='Type 3', TargetNullValue= 'Type 3'}"
                                                HorizontalAlignment="Left"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="3"
                                                Grid.Column="2"
                                                Text="{Binding nameGasPrice[7], UpdateSourceTrigger=PropertyChanged, FallbackValue='00.000', TargetNullValue='00.000'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="3"
                                                Grid.Column="4"
                                                Text="{Binding nameGasPrice[8], UpdateSourceTrigger=PropertyChanged, FallbackValue='0', TargetNullValue='0'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Margin="0 4 0 4"
                                                Foreground="{Binding Text, Mode=OneWay, RelativeSource={RelativeSource Self}, Converter={StaticResource PriceDifferentialToColorConverter}, FallbackValue={StaticResource ForegroundPearlBushBrush}, TargetNullValue={StaticResource ForegroundPearlBushBrush}}"
                                                Style="{StaticResource CardDashboardTriggerText}" />


                                    <TextBlock  Grid.Row="4"
                                                Grid.Column="0"
                                                Text="{Binding nameGasPrice[9], UpdateSourceTrigger=PropertyChanged,FallbackValue='Type 4', TargetNullValue= 'Type 4'}"
                                                HorizontalAlignment="Left"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
