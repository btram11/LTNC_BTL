                </StackPanel>
            </Grid>-->

                    <Border Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource CardDashboard}"
                            Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="*" />
                                <RowDefinition  Height="*" />
                                <RowDefinition  Height="*" />
                                <RowDefinition  Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="2"
                                       Grid.Column="0"
                                       Text="Vehicle Status"
                                       Style="{StaticResource CardDashboardTitle}" />
                            <Button  Height="13"
                                     Margin="0 2.5"
                                     VerticalAlignment="Top"
                                     HorizontalAlignment="Right"
                                     Style="{StaticResource menubutton}"
                                     Grid.Row="0"
                                     Grid.Column="1">
                                <StackPanel Orientation="Horizontal"
                                            Visibility="Hidden">
                                    <TextBlock  Text="Details"
                                                Style="{StaticResource menuButtonText}" />
                                    <Icon:PackIconMaterial Kind="ChevronRight"
                                                           Height="10"
                                                           Padding="2 0 2 0"
                                                           VerticalAlignment="Bottom"
                                                           Margin="0"
                                                           Style="{StaticResource menuButtonIcon}" />
                                </StackPanel>
                            </Button>
                            <TextBlock  Grid.Row="1"
                                        Grid.Column="0"
                                        Text="Available"
                                        Margin="0 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}" />
                            <TextBlock  Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding keyValuePairs[Available], FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />

                            <TextBlock  Grid.Row="1"
                                        Grid.Column="2"
                                        Text="Repairing"
                                        Margin="16 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}" />
                            <TextBlock  Grid.Row="1"
                                        Grid.Column="3"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Repairing, FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />


                            <TextBlock  Grid.Row="2"
                                        Grid.Column="0"
                                        Text="In Use"
                                        Margin="0 8 0 4"
                                        Style="{StaticResource CardDashboardNormalText}" />
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0 8 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding InUse, FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />

                            <TextBlock  Grid.Row="2"
                                        Grid.Column="2"
                                        Text="Maintenance"
                                        Margin="16 8 0 4"
                                        Style="{StaticResource CardDashboardNormalText}" />
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="3"
                                        Margin="0 8 0 4"
                                        HorizontalAlignment="Right"
                                        Text="{Binding Maintenance, FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />

                            <TextBlock  Grid.Row="3"
                                        Grid.Column="0"
                                        Text="Out Of Service"
                                        Margin="0 8 0 4"
                                        Style="{StaticResource CardDashboardNormalText}" />
                            <TextBlock  Grid.Row="3"
                                        Grid.Column="1"
                                        Margin="0 8 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding OutOfService, FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />
                        </Grid>
                    </Border>

