                                                Text="{Binding nameGasPrice[10], UpdateSourceTrigger=PropertyChanged, FallbackValue='00.000', TargetNullValue='00.000'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Style="{StaticResource CardDashboardNormalText}" />
                                    <TextBlock  Grid.Row="4"
                                                Grid.Column="4"
                                                Text="{Binding nameGasPrice[11], UpdateSourceTrigger=PropertyChanged, FallbackValue='0', TargetNullValue='0'}"
                                                HorizontalAlignment="Right"
                                                FontSize="17"
                                                Margin="0 4 0 4"
                                                Foreground="{Binding Text, Mode=OneWay, RelativeSource={RelativeSource Self}, Converter={StaticResource PriceDifferentialToColorConverter}, FallbackValue={StaticResource ForegroundPearlBushBrush}, TargetNullValue={StaticResource ForegroundPearlBushBrush}}"
                                                Style="{StaticResource CardDashboardTriggerText}" />
                                    <TextBlock Grid.Row="5"
                                               Grid.ColumnSpan="5"
                                               TextAlignment="Right"
                                               HorizontalAlignment="Right"
                                               Style="{StaticResource CardDashboardTriggerText}">
                                Date Updated:
                                <Run Text="{Binding nameGasPrice[12], UpdateSourceTrigger=PropertyChanged, FallbackValue='-', TargetNullValue='-'}" />
                                    </TextBlock>

                                </Grid>
                            </ScrollViewer>


                        </Grid>
                    </Border>
                    <Border Grid.Row="1"
