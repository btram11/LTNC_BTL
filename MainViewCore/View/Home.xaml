<UserControl x:Class="MainView.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
             xmlns:local="clr-namespace:MainView"
             xmlns:converter="clr-namespace:MainView.Converters"
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="680"
             d:DesignWidth="1080">
    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Loaded">
            <Behaviors:InvokeCommandAction Command="{Binding LoadCommand}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>
    <UserControl.Resources>
        <converter:PriceDifferentialToColorConverter x:Key="PriceDifferentialToColorConverter" />
    </UserControl.Resources>
    <Border Padding="0 10 0 10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="My Dashboard"
                       Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Foreground="{StaticResource ForegroundPearlBushBrush}"
                       FontSize="25"
                       Margin="5 0 0 0"
                       FontWeight="SemiBold" />
            <ScrollViewer Grid.Row="1"
                          Margin="0 10 0 0"
                          Style="{StaticResource ScrollViewMenu}"
                          VerticalScrollBarVisibility="Auto">
                <Grid SnapsToDevicePixels="true">
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="175" />
                        <RowDefinition MinHeight="175" />
                        <RowDefinition MinHeight="175" />
                        <RowDefinition MinHeight="175" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource CardDashboard}"
                            Grid.Column="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition  Height="2*" />
                                <RowDefinition  Height="2*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="4"
                                       Grid.Column="0"
                                       Text="Overview"
                                       Style="{StaticResource CardDashboardTitle}" />

                            <TextBlock  Grid.Row="1"
                                        Grid.Column="0"
                                        TextAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}">
                                Total Vehicles
                                <LineBreak />
                                (Exclude Trailer)
                            </TextBlock>
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding keyValuePairs[TotalVehicles], FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />


                            <TextBlock  Grid.Row="1"
                                        Grid.Column="1"
                                        Text="Total Trailers"
                                        TextAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}">
                            </TextBlock>
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="1"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding keyValuePairs[TotalTrailers], FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />


                            <TextBlock  Grid.Row="1"
                                        Grid.Column="2"
                                        Text="Total Drivers"
                                        TextAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}">
                            </TextBlock>
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="2"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding keyValuePairs[TotalDrivers], FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />


                            <TextBlock  Grid.Row="1"
                                        Grid.Column="4"
                                        Text="Total Trips"
                                        TextAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Margin="0 16 0 4"
                                        Style="{StaticResource CardDashboardNormalText}">
                            </TextBlock>
                            <TextBlock  Grid.Row="2"
                                        Grid.Column="4"
                                        Margin="0 16 0 4"
                                        HorizontalAlignment="Center"
                                        Text="{Binding keyValuePairs[TotalTrips], FallbackValue=0, TargetNullValue=0}"
                                        Style="{StaticResource CardDashboardNormalText}" />
                        </Grid>
                    </Border>

                    <!--<Grid Grid.Column="2"
                  Grid.ColumnSpan="2"
                  Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <ComboBox Text="Services/Emergency"
                              Width="200"
                              Style="{StaticResource menuComobox}" />
                    <Button  Width="20"
                             Style="{StaticResource topmenuButton}"
